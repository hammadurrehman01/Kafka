{
  "name": "pace-backend",
  "private": true,
  "version": "1.0.0",
  "description": "TypeScript + Routing Controllers + Express API Server",
  "author": "ibad siddiqui",
  "license": "ISC",
  "scripts": {
    "format": "prettier --write .",
    "build": "swc src -d dist",
    "build:tsc": "tsc && tsc-alias",
    "dev": "cross-env NODE_ENV=development nodemon",
    "uat": "cross-env NODE_ENV=uat nodemon",
    "start:dev": "npm run build && cross-env NODE_ENV=development node dist/app/server.js",
    "start:uat": "npm run build && cross-env NODE_ENV=uat node dist/app/server.js",
    "start:production": "npm run build && cross-env NODE_ENV=development node dist/app/server.js",
    "test": "jest --forceExit --detectOpenHandles",
    "lint": "eslint --ignore-path .gitignore --ext .ts src",
    "lint:fix": "npm run lint -- --fix",
    "deploy:prod": "npm run build && pm2 start ecosystem.config.js --only prod",
    "deploy:dev": "pm2 start ecosystem.config.js --only dev",
    "prepare": "husky install",
    "check-format": "prettier --check .",
    "pre-commit": "lint-staged",
    "prisma:init": "prisma init",
    "prisma:generate:dev": "dotenv -e .env.development.local -- npx prisma generate",
    "prisma:create:migration": "dotenv -e .env.development.local -- npx prisma migrate dev --create-only",
    "prisma:pull:dev": "dotenv -e .env.development.local -- npx prisma db pull && dotenv -e .env.development.local -- npx prisma generate",
    "prisma:migrate:dev": "dotenv -e .env.development.local -- npx prisma migrate dev --preview-feature",
    "prisma:migrate:uat": "dotenv -e .env.uat.local -- npx prisma migrate dev --preview-feature",
    "prisma:migrate:prod": "dotenv -e .env.production.local -- npx prisma migrate dev --preview-feature"
  },
  "dependencies": {
    "@aws-sdk/client-cognito-identity-provider": "^3.662.0",
    "@prisma/client": "5.9.0",
    "body-parser": "^1.20.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.13.2",
    "class-validator-jsonschema": "^3.1.1",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "cuid": "^3.0.0",
    "dotenv": "^16.0.1",
    "envalid": "^7.3.1",
    "express": "^4.18.1",
    "helmet": "^5.1.1",
    "hpp": "^0.2.3",
    "jsonwebtoken": "^9.0.2",
    "jwt-decode": "^4.0.0",
    "luxon": "^3.4.4",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "reflect-metadata": "^0.2.2",
    "routing-controllers": "^0.9.0",
    "routing-controllers-openapi": "^3.1.0",
    "stripe": "^16.12.0",
    "swagger-ui-express": "^4.5.0",
    "typedi": "^0.10.0",
    "winston": "^3.8.1",
    "winston-daily-rotate-file": "^4.7.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.4.3",
    "@commitlint/config-conventional": "^18.4.3",
    "@swc/cli": "^0.1.57",
    "@swc/core": "^1.2.220",
    "@types/compression": "^1.7.2",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/hpp": "^0.2.2",
    "@types/jest": "^28.1.6",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/luxon": "^3.4.2",
    "@types/morgan": "^1.9.3",
    "@types/multer": "^1.4.11",
    "@types/node": "^17.0.45",
    "@types/supertest": "^2.0.12",
    "@types/swagger-ui-express": "^4.1.3",
    "@typescript-eslint/eslint-plugin": "^5.29.0",
    "@typescript-eslint/parser": "^5.29.0",
    "cross-env": "^7.0.3",
    "dotenv-cli": "^7.3.0",
    "eslint": "^8.20.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.1",
    "jest": "^28.1.1",
    "lint-staged": "^13.0.3",
    "node-gyp": "^9.1.0",
    "nodemon": "^2.0.19",
    "pm2": "^5.2.0",
    "prettier": "^3.1.0",
    "prisma": "5.9.0",
    "supertest": "^6.2.4",
    "ts-jest": "^28.0.7",
    "ts-node": "^10.9.1",
    "tsc-alias": "^1.7.0",
    "tsconfig-paths": "^4.0.0",
    "typescript": "^4.7.4"
  }
}
