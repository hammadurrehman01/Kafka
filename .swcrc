{
  "$schema": "https://json.schemastore.org/swcrc",
  "jsc": {
    "parser": {
      "syntax": "typescript",
      "tsx": false,
      "dynamicImport": true,
      "decorators": true
    },
    "transform": {
      "legacyDecorator": true,
      "decoratorMetadata": true
    },
    "target": "esnext",
    "externalHelpers": false,
    "keepClassNames": true,
    "loose": false,
    "minify": {
      "compress": false,
      "mangle": false
    },
    "baseUrl": "./src",
    "paths": {
      "@app": ["./app"],
      "@config/*": ["./config/*"],
      "@core/*": ["./core/*"],
      "@data/*": ["./data/*"],
      "@domain/*": ["./domain/*"],
      "@infrastructure/*": ["./infrastructure/*"]
    }
  },
  "module": {
    "type": "commonjs"
  }
}
